{
    "env": {
        "es6": true,
        "node": true,
        "jasmine": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "extends": "airbnb",
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".json",
                    ".native.js"
                ]
            }
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "__DEV__": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "detox"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "eol-last": [
            "error",
            "never"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "no-use-before-define": [
            "error",
            {
                "variables": false
            }
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/prop-types": [
            "error",
            {
                "ignore": [
                    "navigation",
                    "dispatch"
                ]
            }
        ]
    }
}